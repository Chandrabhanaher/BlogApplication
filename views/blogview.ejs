<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blog application</title>
</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container mt-4">
            <h5><%= blog.title %></h5>
            <img src="<%= blog.coerImageUrl %>" width="450px" />
            <pre class="mt-3"><%= blog.body %></pre>

            <div>
                <img src="<%= blog.createdBy.profileImageUrl %>" width="50px" />
                <%= blog.createdBy.fullname %>
            </div>
 
            <div class="mt-3">
                <h6>Comments  <%= comments.length %></h6>
                <% if (locals.user) { %>
                    <form action="/blog/add_comment/<%= blog._id %>" method="post">
                        <div class="mb-3"></div>
                        <input type="text" name="comment" placeholder="Enter comment" class="form-control" />
                        <button type="submit" class="btn btn-sm btn-primary">Add</button>
                    </form>
                <% } %>
            </div>

            <div class="mt-3">
                <% comments.forEach(comment=> { %>
                    <div>
                        <img src="<%= comment.createdBy.profileImageUrl %>" width="30px" />
                        <%= comment.createdBy.fullname %>
                        <pre><%= comment.content %> <label style="font-size: x-small;"><%= comment.createdAt.toLocaleString() %></label></pre>
                        
                    </div>
                    <% }) %>
            </div>

        </div>


        <%- include('./partials/scripts') %>
</body>

</html>